<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    tools:context=".FragmentoPerfil2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PlayParty"
            android:textAlignment="viewEnd"
            android:textColor="#AA64E5"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tfNombreU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="USUARIO"
            android:textAlignment="center"
            android:textColor="#FDF9F9"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tfemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="EMAIL"
            android:textAlignment="center"
            android:textColor="#FDF9F9"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tfID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:text="ID"
            android:textAlignment="center"
            android:textColor="#FDF9F9"
            android:textSize="36sp" />

        <Button
            android:id="@+id/btnSpotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#AA64E5"
            android:text="CONECTAR SPOTIFY"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/Playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ID"
            android:textColor="#FDF9F9"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#AA64E5"
                android:text="PLAYSONG"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnActuPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#AA64E5"
                android:text="ACTUALIZAR PLAYLIST"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AA64E5"
            android:text="CERRAR SESIÃ“N"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</FrameLayout>