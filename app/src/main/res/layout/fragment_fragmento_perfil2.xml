<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".FragmentoPerfil2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PlayParty"
            android:textAlignment="viewEnd"
            android:textColor="#AA64E5"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher_foreground"
            app:srcCompat="@drawable/applogo" />

        <TextView
            android:id="@+id/tfNombreU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="USUARIO"
            android:textAlignment="center"
            android:textColor="#FDF9F9"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tfemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="EMAIL"
            android:textAlignment="center"
            android:textColor="#FDF9F9"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tfID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="ID"
            android:textAlignment="center"
            android:textColor="#FDF9F9"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSpotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#AA64E5"
            android:text="CONECTAR SPOTIFY"
            android:textColor="#FFFFFF" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textColorHint="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PlayList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#515151"
                android:hint="ID"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#AA64E5"
                android:text="PLAYSONG"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnActuPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#AA64E5"
                android:text="ACTUALIZAR PLAYLIST"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="#AA64E5"
            android:text="CERRAR SESIÃ“N"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</FrameLayout>